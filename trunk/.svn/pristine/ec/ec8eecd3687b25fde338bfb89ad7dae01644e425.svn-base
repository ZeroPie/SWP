    private void StornierenActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_StornierenActionPerformed
        int row = uvTable.getSelectedRow();
        int uvid = (int) uvTable.getValueAt(row, 0);
        System.out.println(uvid);
        iUeberweisungVorlageSteuerung.ueberweisungsvorlageLoeschen(uvid);
        uvTableModel.fireTableDataChanged();
        uvTable.repaint();
    }//GEN-LAST:event_StornierenActionPerformed

