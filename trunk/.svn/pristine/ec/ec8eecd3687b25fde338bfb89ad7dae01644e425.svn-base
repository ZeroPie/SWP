    private void initKontoListe(){

        uvTableModel = (DefaultTableModel) uvTable.getModel();
        for (int i = 0; i < ueberweisungsVorlageGrenzList.size(); i++){
            int uVid      = ueberweisungsVorlageGrenzList.get(i).getUvid();
            int kundeID   = ueberweisungsVorlageGrenzList.get(i).getKid();
            int vonKonto  = ueberweisungsVorlageGrenzList.get(i).getVonkonto();
            double betrag = ueberweisungsVorlageGrenzList.get(i).getBetrag();
            Date datum    = ueberweisungsVorlageGrenzList.get(i).getDatum();
            String vZweck = ueberweisungsVorlageGrenzList.get(i).getVerwendungszweck();

            Object[] data = { uVid, kundeID, vonKonto, betrag, datum, vZweck};
            uvTableModel.addRow(data);
          
        }

    }

