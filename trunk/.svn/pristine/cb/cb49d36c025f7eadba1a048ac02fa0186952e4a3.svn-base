    private void btnSubmitActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSubmitActionPerformed
        String vZweck = this.textVerwendungszweck.getText();
        double betrag = (double) this.formattedTextBetrag.getValue();
        betrag = Math.floor(betrag * 100);
        int von = Integer.valueOf(this.textVonKonto.getText());
        int an = Integer.valueOf(this.textAnKonto.getText());
        Date datum = (Date) this.formattedTextDatum.getValue();
        
        try {
            if(vZweck.length() > 0 && betrag > 0 && von > 0 && an > 0){
                UeberweisungGrenz uGrenz = new UeberweisungGrenz();
                uGrenz.setBetrag(betrag);
                uGrenz.setDatum(datum);
                uGrenz.setVerwendungszweck(vZweck);
                uGrenz.setVonkonto(von);
                uGrenz.setZukonto(an);
        
                this.ueberweisungSteuerung.ueberweisungErfassen(uGrenz);
            }else {
                throw new RuntimeException("Das Formular enthält Fehler.");
            }
        } catch(RuntimeException e){
            JOptionPane.showMessageDialog(this, e.getMessage(), "Fehler", JOptionPane.ERROR_MESSAGE);
        }
    }//GEN-LAST:event_btnSubmitActionPerformed

