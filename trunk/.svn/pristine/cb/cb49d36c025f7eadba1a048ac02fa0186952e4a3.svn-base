    private void btnNoPresetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnNoPresetActionPerformed
        this.textVonKonto.setText("");
        
        this.formattedTextBetrag = new javax.swing.JFormattedTextField(NumberFormat.getCurrencyInstance());
        this.formattedTextBetrag.setValue(0);
        
        this.formattedTextDatum = new javax.swing.JFormattedTextField(new Date());
        this.formattedTextDatum.setValue(new Date());
        
        this.textVerwendungszweck.setText("");
        
        this.panelForm.setVisible(true);
    }//GEN-LAST:event_btnNoPresetActionPerformed

    private void btnUsePresetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnUsePresetActionPerformed
        UeberweisungsvorlageGrenz ueberweisungsvorlageGrenz = this.presetList.get(this.comboPresets.getSelectedIndex());
        
        this.textVonKonto.setText(String.format("%d", ueberweisungsvorlageGrenz.getVonkonto()));
        
        this.formattedTextBetrag = new javax.swing.JFormattedTextField(NumberFormat.getCurrencyInstance());
        this.formattedTextBetrag.setValue(ueberweisungsvorlageGrenz.getBetrag() / 100);
        
        this.formattedTextDatum = new javax.swing.JFormattedTextField(new Date());
        this.formattedTextDatum.setValue(ueberweisungsvorlageGrenz.getDatum());
        
        this.textVerwendungszweck.setText(ueberweisungsvorlageGrenz.getVerwendungszweck());
        
        this.panelForm.setVisible(true);
    }//GEN-LAST:event_btnUsePresetActionPerformed

